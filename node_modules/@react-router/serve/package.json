{
  "name": "@react-router/serve",
  "version": "7.11.0",
  "description": "Production application server for React Router",
  "bugs": {
    "url": "https://github.com/remix-run/react-router/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/remix-run/react-router",
    "directory": "packages/react-router-serve"
  },
  "license": "MIT",
  "exports": {
    "./package.json": "./package.json"
  },
  "bin": {
    "react-router-serve": "bin.js"
  },
  "wireit": {
    "build": {
      "command": "tsup",
      "files": [
        "../../pnpm-workspace.yaml",
        "*.ts",
        "bin.js",
        "tsconfig.json",
        "package.json"
      ],
      "output": [
        "dist/**"
      ]
    }
  },
  "dependencies": {
    "@mjackson/node-fetch-server": "^0.2.0",
    "compression": "^1.8.1",
    "express": "^4.19.2",
    "get-port": "5.1.1",
    "morgan": "^1.10.1",
    "source-map-support": "^0.5.21",
    "@react-router/express": "7.11.0",
    "@react-router/node": "7.11.0"
  },
  "peerDependencies": {
    "react-router": "7.11.0"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/express": "^4.17.9",
    "@types/morgan": "^1.9.10",
    "@types/source-map-support": "^0.5.6",
    "tsup": "^8.3.0",
    "typescript": "^5.4.5",
    "wireit": "0.14.9"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist/",
    "bin.js",
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md"
  ],
  "scripts": {
    "build": "wireit",
    "typecheck": "tsc"
  }
}